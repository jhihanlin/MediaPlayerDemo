<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mediaplayerdemo.activity.MediaPlayerActivity">

    <com.example.mediaplayerdemo.controller.MediaPlayerControlView
        android:id="@+id/surface_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.mediaplayerdemo.controller.MediaPlayerControlView>

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:src="@drawable/video_play" />

    <fragment
        android:id="@+id/adFragment"
        android:name="com.example.mediaplayerdemo.fragment.AdFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />


</RelativeLayout>